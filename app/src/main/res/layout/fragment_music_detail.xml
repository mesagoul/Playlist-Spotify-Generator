<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Music.Detail.MusicDetailFragment">

    <ImageView
        android:id="@+id/music_image"
        android:layout_width="179dp"
        android:layout_height="179dp"
        android:contentDescription="@+string/music_image_description"
        android:maxHeight="150dp"
        android:maxWidth="150dp" />

    <TextView
        android:id="@+id/music_detail_song_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="@string/song_name"
        android:textAlignment="center"
        android:layout_marginTop="179dp"/>

    <TextView
        android:id="@+id/music_detail_artist_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="229dp"
        android:hint="@string/artist_name"
        android:textAlignment="center" />


</FrameLayout>